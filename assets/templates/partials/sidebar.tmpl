                  <!-- Scrollable content with max-height adjusted for many items -->
                  <div class="mt-2 h-32 overflow-y-auto"> <!-- Adjust max-height for a taller scroll area -->
                     <ul id="nodes_list_sidebar"
                         class="text-sm text-gray-700 dark:text-gray-200">
