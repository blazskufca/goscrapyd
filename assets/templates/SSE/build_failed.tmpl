{{define "sse:BuildFailed"}}
<div class="max-w-full mx-auto px-4 py-16 text-center">
    <h1 class="text-5xl font-bold text-red-600 mb-8">
        Build error!
    </h1>
    <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">
        Failed to build python egg with the following error:
    </h2>
    <pre class="text-left bg-gray-50 dark:bg-gray-800 p-4 rounded-lg mb-8 overflow-x-auto whitespace-pre-wrap break-words text-sm">
    <code>{{.}}</code>
  </pre>
    <a href="/deploy-project" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
        Retry Deployment
        <svg class="w-4 h-4 ml-2" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3.33337 8H12.6667M12.6667 8L8.00004 3.33333M12.6667 8L8.00004 12.6667" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    </a>
</div>
{{end}}
